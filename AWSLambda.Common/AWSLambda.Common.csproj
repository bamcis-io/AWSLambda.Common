<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <RootNamespace>BAMCIS.AWSLambda.Common</RootNamespace>
    <AssemblyName>BAMCIS.AWSLambda.Common</AssemblyName>
    <PackageId>BAMCIS.AWSLambda.Common</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Authors>Michael Haken</Authors>
    <Company>bamcis.io</Company>
    <Product>AWS Lambda Common Utilities</Product>
    <Description>Provides some commonly utilized tools for running AWS Lambda functions, particularly around writting logs via the ILambdaContext and dealing with asynchronous events. Additionally provides a framework to simplify custom resource creation with CloudFormation.</Description>
    <Copyright>BAMCIS</Copyright>
    <RepositoryType>Git</RepositoryType>
    <PackageLicenseUrl>https://raw.githubusercontent.com/bamcis-io/AWSLambda.Common/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/bamcis-io/AWSLambda.Common</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bamcis-io/AWSLambda.Common</RepositoryUrl>
    <PackageReleaseNotes>Updated the custom resource framework to include interfaces, base classes, and factory methods.</PackageReleaseNotes>
    <Version>1.4.0</Version>
    <AssemblyVersion>1.4.0.0</AssemblyVersion>
    <PackageTags>AWS Lambda Common Logging Interleaved</PackageTags>
    <NetStandardImplicitPackageVersion>1.6</NetStandardImplicitPackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Amazon.Lambda.Core" Version="1.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
  </ItemGroup>

</Project>
